BINDIR = $(PREFIX)/bin/
DATADIR = $(PREFIX)/share/
APPDIR = $(DATADIR)/applications/
PACKAGE = lterm
VERSION = 1.6.0
DESKTOP = $(PACKAGE).desktop
MYDATADIR = $(DATADIR)/$(PACKAGE)/data/
MYIMGDIR = $(DATADIR)/$(PACKAGE)/img/

SRCS = $(wildcard src/*.c)
OBJS = $(SRCS:.c=.o)
DEPS = $(OBJS:.o=.d)

CFLAGS += -DPACKAGE=\"$(PACKAGE)\" -DVERSION=\"$(VERSION)\" -DIMGDIR=\"$(MYIMGDIR)\" -DDATADIR=\"$(MYDATADIR)\"

all: $(PACKAGE)

-include $(DEPS)

%.d: %.c
	@$(CPP) $(CFLAGS) $< -MM -MT $(@:.d=.o) > $@

%.o: %.c
	@$(CC) -c $(CFLAGS) $<
	@echo CC $<

$(PACKAGE): $(OBJS)
	@$(CC) -o $@ $^ $(LDFLAGS)
	@echo LD $(PACKAGE)

# use FORCE in case PREFIX changed
$(DESKTOP): data/$(DESKTOP).in FORCE
	sed -e 's!IMGDIR!$(MYIMGDIR)!' < $< > $@

install: $(PACKAGE) $(DESKTOP)
	install $(PACKAGE) $(BINDIR)/
	install -d $(MYDATADIR)
	install -d $(MYIMGDIR)
	install -d $(APPDIR)
	install -t $(MYDATADIR) data/*
	install -t $(MYIMGDIR) img/*
	install -t $(APPDIR) $(DESKTOP)

uninstall:
	-rm -f $(BINDIR)/$(PACKAGE)
	-rm -f $(MYDATADIR)/*
	-rm -f $(MYIMGDIR)/*
	-rm -f $(APPDIR)/$(DESKTOP)
	-rmdir $(MYDATADIR)
	-rmdir $(MYIMGDIR)
	-rmdir $(DATADIR)/$(PACKAGE)

clean:
	-rm -f $(OBJS) $(PACKAGE)
	-rm -f $(DEPS)
	-rm -f $(DESKTOP)

distclean: clean
	-rm -f Makefile

FORCE:

.PHONY: all install uninstall clean distclean

